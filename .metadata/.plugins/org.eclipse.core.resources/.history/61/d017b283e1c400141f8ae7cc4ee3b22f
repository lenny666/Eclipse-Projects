import java.util.Scanner;



public class kolmnurga_pindala {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner kõrgus_scan = new Scanner(System.in);
		Scanner alus_scan = new Scanner(System.in);
		
		System.out.println("Sisesta kolmnurga alus: ");
		double alus = alus_scan.nextDouble();
		
		System.out.println("Sisesta kolmnurga kõrgus: ");
		double kõrgus = kõrgus_scan.nextDouble();
		
		double pindala = alus * kõrgus / 2;
		
		System.out.println("Kolmnurga pindala on: " + pindala + ".");
		
		kõrgus_scan.close();
		alus_scan.close();
	}

}
